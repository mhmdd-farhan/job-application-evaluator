generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Job {
  id String @id @default(cuid())
  status String
  result Json?

  cv_id String
  cv Cv @relation(fields: [cv_id], references: [id])

  submission_id String
  submission Submission @relation(fields: [submission_id], references: [id])

  created_at DateTime @default(now())

  @@map("jobs")
}

model Cv {
  id String @id @default(cuid())
  description String

  job Job[]

  created_at DateTime @default(now())

  @@map("cvs")
}

model Submission {
  id String @id @default(cuid())
  description String

  job Job[]

  created_at DateTime @default(now())

  @@map("submissions")
}